      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
  </div>
<% end %> 

<%= form_with model: @user do |form| %>
  <%= form.label "Username:"%> 
  <%= form.text_field :username, value: "username" %>
  <%= form.label "Email:"%>  
  <%= form.email_field :email, placeholder: "example@example.com" %>
  <%= form.label "Password:"%>
  <%= form.password_field :password %>
  <%= form.submit %>
<% end %>